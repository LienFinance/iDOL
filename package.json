{
    "name": "lien",
    "version": "1.0.0",
    "license": "MIT",
    "devDependencies": {
        "@openzeppelin/contracts": "^3.0.1",
        "@typechain/web3-v1": "^1.0.0",
        "@types/bignumber.js": "^5.0.0",
        "@types/chai": "^4.2.11",
        "@types/cli-table": "^0.3.0",
        "@types/mocha": "^7.0.2",
        "@types/moment": "^2.13.0",
        "@types/node": "^13.9.8",
        "eth-gas-reporter": "^0.2.17",
        "ganache-cli": "6.4.2",
        "husky": "^4.2.3",
        "lint-staged": "^10.1.1",
        "openzeppelin-solidity": "^3.0.1",
        "prettier": "^2.0.5",
        "prettier-plugin-solidity": "^1.0.0-alpha.52",
        "solc": "0.6.6",
        "solidity-coverage": "^0.7.9",
        "truffle": "^5.1.21",
        "truffle-typings": "^1.0.8",
        "ts-node": "^8.8.1",
        "typechain": "^2.0.0",
        "typechain-target-truffle": "^1.0.2",
        "typescript": "^3.8.3"
    },
    "scripts": {
        "compile": "npx truffle compile",
        "generate": "yarn compile && npx typechain --target=truffle 'build/contracts/**/*.json'",
        "generate-web3-types": "yarn compile && npx typechain --target=web3-v1 'build/contracts/**/*.json' --outDir ../wallet/src/libs/types/",
        "get-abi": "npx ts-node scripts get-abi --output-dir ../wallet/src/libs/abi/main/",
        "prepare": "yarn generate",
        "test": "npx truffle test",
        "test:no-logs": "npx truffle test --bail",
        "test:json": "env FORMAT=json yarn test ./test/scenario/pattern2.test.ts --quiet",
        "coverage": "npx truffle run coverage --network coverage",
        "start-ganache": "node_modules/ganache-cli/cli.js --mnemonic \"unhappy essence dynamic glimpse drop creek today garlic resemble rib diet wing\" --port 7545 -e 1000000 -l 100000000 -i 5777 --allowUnlimitedContractSize > /dev/null &",
        "ganache:dev": "ganache-cli --port 7545 -e 1000000",
        "ganache:private": "node_modules/ganache-cli/cli.js --mnemonic \"unhappy essence dynamic glimpse drop creek today garlic resemble rib diet wing\" --port 7545 -b 1 -e 1000000 > /dev/null &",
        "ganache:debug": "node_modules/ganache-cli/cli.js --mnemonic \"unhappy essence dynamic glimpse drop creek today garlic resemble rib diet wing\" --port 7545 -b 1 -e 1000000",
        "deploy": "npx truffle migrate",
        "make-snapshot": "npx truffle migrate --network private",
        "setup-private": "yarn run ganache:private && yarn run make-snapshot"
    },
    "dependencies": {
        "@openzeppelin/test-helpers": "0.5.5",
        "@truffle/hdwallet-provider": "^1.0.35",
        "cli-table": "^0.3.1",
        "commander": "^5.1.0",
        "dotenv": "^8.2.0",
        "ethereumjs-tx": "^2.1.2",
        "moment": "^2.24.0",
        "node-fetch": "^2.6.0",
        "web3": "^1.2.9"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "test/**/*.{js,jsx,ts,tsx,json,css,scss}": [
            "npx prettier --write"
        ],
        "contracts/**/*.sol": [
            "npx prettier --write"
        ]
    }
}
